<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <com.simblast.app.common.widget.QkTextView
        android:id="@+id/mass_send_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mass Send"
        android:textAppearance="@style/TextPrimary"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.simblast.app.common.widget.QkEditText
        android:id="@+id/numbers_input"
        style="@style/TextPrimary"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Enter numbers (one per line)"
        android:inputType="textMultiLine"
        android:gravity="top|start"
        android:lines="6"
        android:background="@drawable/rounded_rectangle_24dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/mass_send_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap" />

    <com.simblast.app.common.widget.QkEditText
        android:id="@+id/message_input"
        style="@style/TextPrimary"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Message"
        android:inputType="textMultiLine"
        android:gravity="top|start"
        android:lines="6"
        android:background="@drawable/rounded_rectangle_24dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/numbers_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap" />

    <Button
        android:id="@+id/send_button"
        style="@style/TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        app:layout_constraintTop_toBottomOf="@id/message_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
